{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: iridium-extractor",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/apps/iridium-extractor",  // 确保路径正确
            "console": "integratedTerminal",
            "args": [
                "${workspaceFolder}/test-data/prbs15-2M-20dB.sigmf-data",  // 输入文件路径
                ">", 
                "output.bit"  // 输出文件
            ],
            "cwd": "${workspaceFolder}",  // 当前工作目录
            "justMyCode": false
        }
    ]
}